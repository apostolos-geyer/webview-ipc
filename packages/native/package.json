{
  "name": "@webviewrpc/native",
  "version": "1.0.0",
  "description": "React Native client for webview-rpc",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "cd ../.. && biome lint packages/native",
    "format": "cd ../.. && biome format --write packages/native",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "keywords": [
    "webview",
    "rpc",
    "react-native",
    "typescript",
    "ipc",
    "expo",
    "mobile"
  ],
  "author": "stoli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apostolos-geyer/webview-ipc.git",
    "directory": "packages/native"
  },
  "homepage": "https://github.com/apostolos-geyer/webview-ipc#readme",
  "bugs": {
    "url": "https://github.com/apostolos-geyer/webview-ipc/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@standard-schema/spec": "^1.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.76.0",
    "react-native-webview": "^13.15.0"
  },
  "dependencies": {
    "@webviewrpc/core": "workspace:*"
  },
  "devDependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^19.1.17",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "jsdom": "^27.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-native": "0.81.5",
    "react-native-webview": "13.15.0",
    "tsdown": "^0.4.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.10"
  }
}
