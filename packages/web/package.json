{
  "name": "@webviewrpc/web",
  "version": "1.1.0",
  "description": "Web/React client for webview-rpc",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsdown",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "cd ../.. && biome lint packages/web",
    "format": "cd ../.. && biome format --write packages/web",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "keywords": ["webview", "rpc", "react", "nextjs", "typescript", "ipc", "web", "browser"],
  "author": "stoli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apostolos-geyer/webview-ipc.git",
    "directory": "packages/web"
  },
  "homepage": "https://github.com/apostolos-geyer/webview-ipc#readme",
  "bugs": {
    "url": "https://github.com/apostolos-geyer/webview-ipc/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@standard-schema/spec": "^1.0.0",
    "react": ">=19.0.0"
  },
  "dependencies": {
    "@webviewrpc/core": "workspace:*"
  },
  "devDependencies": {
    "@standard-schema/spec": "^1.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "19.1.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "happy-dom": "^20.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tsdown": "^0.4.0",
    "typescript": "~5.9.2"
  }
}
